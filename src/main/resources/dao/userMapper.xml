<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.zzuli.mapper.UserMapper">
    <resultMap id="simpleMap" type="cn.edu.zzuli.bean.User">
        <id column="user_id" property="userId"/>
        <result property="userName" column="user_name"/>
        <result property="pwd" column="pwd"/>
    </resultMap>
    <resultMap id="noPasswordMap" type="cn.edu.zzuli.bean.User">
        <id column="user_id" property="userId"/>
        <result property="userName" column="user_name"/>
    </resultMap>
    <sql id="simpleParams">
        user_id,
        user_name,
        password
    </sql>
    <sql id="noPwdParam">
        user_id,
        user_name
    </sql>
    <select id="login" resultMap="simpleMap">
        select <include refid="noPwdParam"/>
        from user
        where user_name = #{userName} AND pwd = #{pwd}
    </select>

</mapper>
